{% extends "OroUIBundle:actions:index.html.twig" %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'fm-platform-grid' %}
{% set pageTitle = fm.nav.platform.plural_label|trans %}

{% block navButtons %}
    {% if is_granted('fm_resource_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path' : path('fm_platform_create'),
                'entity_label': fm.nav.platform.label|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
